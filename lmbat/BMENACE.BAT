@ECHO OFF
SET EPISODE=1
IF EXIST BMENACE1.EXE SET EXENAME=BMENACE
IF EXIST BHAZARD1.EXE SET EXENAME=BHAZARD
IF EXIST BM1GM.EXE SET EXENAME=BM1GM
:START
BMENACE.EXE %EPISODE%
IF ERRORLEVEL 3 GOTO EP3
IF ERRORLEVEL 2 GOTO EP2
IF ERRORLEVEL 1 GOTO EP1
GOTO END

:EP1
SET EPISODE=1
GOTO RUN

:EP2
SET EPISODE=2
GOTO RUN

:EP3
SET EPISODE=3
GOTO RUN

:RUN
IF %EXENAME% == BHAZARD GOTO RUNB
IF %EXENAME% == BM1GM GOTO RUNGM
%EXENAME%%EPISODE%.EXE %1 %2 %3 %4 %5 %6 %7 %8 %9
PAUSE > NUL
GOTO START

:RUNB
%EXENAME%%EPISODE%.EXE slammer
GOTO START

:RUNGM
BM%EPISODE%GM.EXE %1 %2 %3 %4 %5 %6 %7 %8 %9
GOTO START

:END
SET EPISODE=
SET EXENAME=
